<h2>Match</h2>
  <ul>
    <li>Match Status: <%= @matches.status %></li>
    <li>Start Time: <%= distance_of_time_in_words_to_now(@matches.earliest_start) %></li>
    <li>Match Manager Name: <%= @matches.manager.name %></li>
    <li>Match Manager Referee Name: <%= @matches.manager.referee.name %></li>
    <li>Match Manager Referee Name: <%= @matches.manager.referee.players_per_game %></li>
</ul>

<p>Completion: <%= distance_of_time_in_words_to_now(@matches.completion) %></p>


<ol>
  <% @matches.player_matches.order(score: :desc).each do |pm| %>
    <li><%= link_to pm.player.name, player_path(pm.player) %> - <%= pm.score %></li>
  <% end %>
</ol>